{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ScriptHost"],
    "sourceMap": true,
    "outDir": "public/dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@shared/*": ["../@Shared/*"]
    }
  },
  "include": ["src", "../../Shared"],
  "exclude": ["node_modules"]
}
