{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "types": ["node"],
    "target": "es6",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ScriptHost"],
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@shared/*": ["../Shared/*"]
    }
  },
  "include": [".", "../Shared"],
  "exclude": ["node_modules"]
}
