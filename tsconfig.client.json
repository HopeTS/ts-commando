{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ScriptHost"],
    "sourceMap": true,
    "outDir": "public/dist",
    "baseUrl": "src/client",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": ["src/client"],
  "exclude": ["node_modules", "src/server"]
}
